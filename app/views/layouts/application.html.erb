<!DOCTYPE html>
<html>
<head>
  <title>Mockapp</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <meta name="turbolinks-cache-control" content="no-cache">

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  <style>
    .logoutButton {
      -webkit-appearance: initial;
      -moz-appearance: initial;
    }
  </style>

</head>

<body>
<nav class="navbar navbar-expand-lg navbar-dark" id="navbar">
  <a class="navbar-brand" href="#">App Name</a>
  <button
    class="navbar-toggler"
    type="button"
    data-toggle="collapse"
    data-target="#navbarSupportedContent"
    aria-controls="navbarSupportedContent"
    aria-expanded="false"
    aria-label="Toggle navigation"
  >
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <% if current_user.admin? %>
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <div class="nav-link"><span class="sr-only">(current)</span><%= link_to 'Invite Users', new_user_invitation_path, class: "nav-link" %></div>
      </li>
    </ul>
    <% end %>
    <div class="form-inline my-2 my-lg-0">
      <% if user_signed_in? %>
        <ul class="navbar-nav">
          <li class="nav-item" id="user-container">
            <a class="nav-link"><%= current_user.name %></a>
          </li>
        </ul>
        <div class="vertical-border">|</div>
        <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "btn btn-outline-success my-2 my-sm-0 logoutButton", type: "submit") %>
      <% end %>
    </div>
  </div>
</nav>
<%= yield %>
</body>
</html>
